<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ContactUsFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/contactUsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="@string/contact_text"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/emailLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactUsText"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:text="@string/email"
            android:drawablePadding="5dp"
            android:autoLink="email"
            app:drawableStartCompat="@drawable/ic_contact" />
    </RelativeLayout>
</LinearLayout>